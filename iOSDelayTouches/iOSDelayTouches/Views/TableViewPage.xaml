				            Grid.Row="1"
				            Clicked="ClearClicked"
				            Text="Clear" />
                        <Button
				            Grid.Row="1"
				            Grid.Column="1"
				            Clicked="SaveClicked"
				            Text="Save" />
                        <Image
				            x:Name="GeneratedImage"
				            Grid.Row="2"
				            Grid.ColumnSpan="2" />
